@{
    ViewData["Title"] = "Formulario";
}
<fieldset>
    <legend> Ingresar vacas</legend>
    @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            <span class="col-md-2">
                Diio
            </span>
            <span class="col-md-6">
                @Html.TextBox("diio", null, new { @class = "form-control", placeholder = "Ingresar Diio" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Ingresar Nombre" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Sexo
            </span>
            <span class="col-md-6">
                @Html.DropDownList("sexo", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Macho", Value="Macho"},
                       new SelectListItem{Text="Hembra", Value="Hembra"}
                   },
                   new { @class = "form-control" }
                   )
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Raza
            </span>
            <span class="col-md-6">
                @Html.DropDownList("raza", new List<SelectListItem>
                   {
                       new SelectListItem{Text="Holstein", Value="Holstein"},
                       new SelectListItem{Text="Jersey", Value="Jersey"}
                   },
                   new { @class = "form-control" }
                   )
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Promedio de Leche Diaria
            </span>
            <span class="col-md-6">
                @Html.TextBox("leche", null, new { @class = "form-control", placeholder = "Ingresar promedio de leche" })
            </span>
        </div>
  
            <div class="form-control">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>

    }

</fieldset>